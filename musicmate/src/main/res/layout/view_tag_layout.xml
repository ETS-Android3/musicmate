<?xml version="1.0" encoding="utf-8"?>
<io.github.florent37.shapeofview.shapes.DiagonalView
    android:id="@+id/panel_labels"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="#504F4F"
    android:layout_gravity="bottom"
    app:shape_diagonal_angle="8"
    app:shape_diagonal_position="top"
    app:barrierDirection="right"
    tools:showIn="@layout/activity_tags">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_32_dp"
        android:paddingStart="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24_dp"
            android:layout_marginRight="@dimen/dimen_24_dp"
            android:layout_marginBottom="@dimen/dimen_4_dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dimen_4_dp"
                    android:gravity="right|center_horizontal"
                    android:layout_gravity="right|center_horizontal"
                    android:textColor="@color/grey400"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/panel_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:maxLines="2"
                    android:gravity="right"
                    android:paddingRight="@dimen/dimen_4_dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizePresetSizes="@array/auto_size_text_sizes"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:background="@drawable/selectable_link"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:layout_marginRight="@dimen/dimen_8_dp"
                android:layout_marginLeft="@dimen/dimen_8_dp"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Album"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen_4_dp"
                    android:gravity="left|center_horizontal"
                    android:layout_gravity="left|center_horizontal"
                    android:textColor="@color/grey400"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/panel_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Album"
                    android:maxLines="2"
                    android:gravity="left"
                    android:paddingLeft="@dimen/dimen_4_dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizePresetSizes="@array/auto_size_text_sizes"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:background="@drawable/selectable_link"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/btnAspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dp"
                android:layout_marginBottom="@dimen/dimen_4_dp"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp"
                android:paddingLeft="@dimen/dimen_12_dp"
                android:paddingRight="@dimen/dimen_12_dp"
                android:layout_marginRight="@dimen/dimen_12_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="@string/aspect_label"
                android:selectAllOnFocus="false"
                android:linksClickable="false"
                android:autoLink="all"
                android:background="@drawable/selectable_botton"/>

            <TextView
                android:id="@+id/btnFFMPEG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dp"
                android:layout_marginBottom="@dimen/dimen_4_dp"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp"
                android:paddingLeft="@dimen/dimen_24_dp"
                android:paddingRight="@dimen/dimen_24_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="@string/convert_label"
                android:selectAllOnFocus="false"
                android:linksClickable="false"
                android:autoLink="all"
                android:background="@drawable/selectable_botton"/>
            <TextView
                android:id="@+id/btnWebSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_dp"
                android:layout_marginBottom="@dimen/dimen_4_dp"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingBottom="@dimen/dimen_4_dp"
                android:paddingLeft="@dimen/dimen_12_dp"
                android:paddingRight="@dimen/dimen_12_dp"
                android:layout_marginLeft="@dimen/dimen_12_dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="@string/websearch_label"
                android:selectAllOnFocus="false"
                android:linksClickable="false"
                android:autoLink="all"
                android:background="@drawable/selectable_botton"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="45dp">

            <LinearLayout
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4_dp"
                android:background="@drawable/selectable_botton"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12_dp"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingRight="@dimen/dimen_24_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_round_delete_forever_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dimen_4_dp"
                    android:autoLink="all"
                    android:linksClickable="false"
                    android:selectAllOnFocus="false"
                    android:text="@string/delete_song_label"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_8_dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/selectable_botton"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_12_dp"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingRight="@dimen/dimen_12_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_round_edit_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:autoLink="all"
                    android:linksClickable="false"
                    android:selectAllOnFocus="false"
                    android:text="@string/edit_tags_label"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnImport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dimen_4_dp"
                android:background="@drawable/selectable_botton"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_24_dp"
                android:paddingTop="@dimen/dimen_4_dp"
                android:paddingRight="@dimen/dimen_12_dp"
                android:paddingBottom="@dimen/dimen_4_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/dimen_4_dp"
                    android:autoLink="all"
                    android:linksClickable="false"
                    android:selectAllOnFocus="false"
                    android:text="@string/import_songs_label"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_round_move_to_inbox_24" />

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="45dp">
            <TextView
                android:id="@+id/panel_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_4_dp"
                android:layout_marginBottom="@dimen/dimen_4_dp"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/panel_enc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_4_dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"/>
            <!--
            <TextView
                android:id="@+id/panel_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:padding="@dimen/dimen_2_dp"
                android:textSize="10sp"
                android:ellipsize="middle"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"/>
-->

            <TextView
                android:id="@+id/panel_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/selectable_link"
                android:padding="@dimen/dimen_4_dp"
                android:textSize="10sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/bg_gradient"/>

</io.github.florent37.shapeofview.shapes.DiagonalView>