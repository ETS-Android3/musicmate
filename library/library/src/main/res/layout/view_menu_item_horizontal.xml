<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="128sp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/btn_flat_selector"
    android:divider="@drawable/shadow"
    android:dividerPadding="@dimen/dimen_2_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_8_dp"
        android:paddingBottom="@dimen/dimen_8_dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="@dimen/dimen_24_dp"/>
</LinearLayout>