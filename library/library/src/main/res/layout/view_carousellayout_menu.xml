<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialogue_margin_top"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/dimen_8_dp"
        android:layout_marginRight="@dimen/dimen_8_dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_bubble"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_border"
            android:layout_marginBottom="@dimen/text_title_message_space"
            android:layout_marginLeft="@dimen/text_margin_border"
            android:layout_marginRight="@dimen/text_margin_border"
            android:gravity="center"
            android:text="Dialog Title"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/text_default"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin_bottom"
            android:layout_marginLeft="@dimen/text_margin_border"
            android:layout_marginRight="@dimen/text_margin_border"
            android:gravity="center"
            android:text="Sample Dialog Message"
            android:textSize="@dimen/text_message_size"
            android:textColor="@color/text_default"
            android:maxLines="4"
            android:minLines="1"
            android:scrollbars="vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="320dp"
            android:layout_height="128dp"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:layout_marginRight="@dimen/dimen_8_dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>